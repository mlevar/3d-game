import org.lwjgl.opengl.GL11;
import org.lwjgl.util.vector.Vector3f;

public class Kura extends Enemy {

	private Vector3f position = null;

	private Obj3D model;
	private float speed = 5f;
	private Vector3f direction = new Vector3f(0, 0, 0);;
	private float scale = 1;

	public Kura(float x, float y, float z, float r) {
		super(x, y, z, r);

		model = new Obj3D("model.obj");
		model.setPosition(20.0f, -3.0f, -5.0f);
		model.setRotation(0, 0, 0);
		model.setScaling(2f, 2f, 2f);
		model.render3D();
	}

	public void move() {
		if (position.x > direction.x) {
			position.x -= speed;
		} else if (position.x < direction.x) {
			position.x += speed;
		}
	}
}
