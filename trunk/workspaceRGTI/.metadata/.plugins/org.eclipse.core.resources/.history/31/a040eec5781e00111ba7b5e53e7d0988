import org.lwjgl.opengl.GL11;
import org.lwjgl.util.vector.Vector3f;

public class Kura extends Enemy {

	private Obj3D model;
	private float speed = 5f;
	private Vector3f direction=null;
	private float scale=1;
	
	public Kura(float x, float y, float z, float r) {
		super(x, y, z, r);
		
		model=new Obj3D("kura.obj");
		skydome.setPosition(-215.0f * s, -100.0f * s, +70.0f * s);
		skydome.setRotation(0, 0, 0);
		skydome.setScaling(1f * s, 1f * s, 1f * s);
		skydome.render3D();
	}
	
	
}
